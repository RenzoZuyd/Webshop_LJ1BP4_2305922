@page
@model KE03_INTDEV_SE_1_Base.Pages.ProductsModel
@{
	ViewData["Title"] = "Products";

    <div class="product-list">
        @foreach (var c in Model.Products)
        {
            <div class="product-card">
                <div class="product">
                    <h3>@c.Name</h3>
                    <p>@c.Description</p>
                    <p class="price">€@c.Price.ToString()</p>
                </div>
            </div>
        }
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>Klant</th>
                <th>Aantal Orders</th>
                <th>Prijs</th>
            </tr>
        </thead>
        @foreach (var c in Model.Products)
        {
            <tr>
                <td>@Html.DisplayName(c.Name)</td>
                <td>@Html.DisplayName(c.Description)</td>
                <td>@Html.DisplayName(c.Price.ToString())</td>
            </tr>
        }
    </table>
}
