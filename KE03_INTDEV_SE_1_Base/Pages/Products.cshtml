@page
@model KE03_INTDEV_SE_1_Base.Pages.ProductsModel
@{
	ViewData["Title"] = "Products";
    <head>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <div class="product-list">
        @foreach (var c in Model.Products)
        {
            <div class="product-card">
                <img src=@c.ImgUrl alt="@c.Name" class="product-image" />
                <div class="product-title">
                    <h3>@c.Name</h3>
                    <div class="product-description">
                        <p>@c.Description</p>
                        <div class="product-price">
                            <p class="price">@c.Price</p>
                            <label>
                                Aantal:
                                <input type="number" name="quantity" min="1" value="1" class="quantity-input" />
                            </label>

                            <button class="buy-button">
                                <i class="fa-solid fa-cart-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>Klant</th>
                <th>Aantal Orders</th>
                <th>Prijs</th>
            </tr>
        </thead>
        @foreach (var c in Model.Products)
        {
            <tr>
                <td>@Html.DisplayName(c.Name)</td>
                <td>@Html.DisplayName(c.Description)</td>
                <td>@Html.DisplayName(c.Price.ToString())</td>
            </tr>
        }
    </table>
}
</head>
}